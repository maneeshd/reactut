{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jquery": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": "off",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-expressions": "off",
        "no-unused-vars": "off",
        "no-console": "off",
    },
    "globals": {
        "React": true,
        "ReactDOM": true
    }
}